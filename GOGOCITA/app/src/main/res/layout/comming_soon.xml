<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/comingsoon">
        <TextView
            android:id="@+id/tv_commingsoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h100"
            android:layout_marginRight="@dimen/standard"
            android:layout_marginLeft="@dimen/standard"
            android:text="@string/comingsoon"
            android:textSize="@dimen/t30"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_goback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/standard"
            android:layout_marginRight="@dimen/standard"
            android:layout_marginLeft="@dimen/standard"
            android:textColor="@color/white"
            android:text="@string/go_back"
            android:onClick="goToDashBoard"
            android:textSize="@dimen/t20" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/standard"
            android:layout_marginLeft="@dimen/standard"
            android:id="@+id/tv"
            android:layout_below="@+id/tv_commingsoom"
            android:text="@string/contentcomingsoon"
            android:textSize="@dimen/t20"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/grey"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>