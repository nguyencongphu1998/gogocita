<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <AdapterViewFlipper
                android:layout_width="match_parent"
                android:layout_height="@dimen/h250"
                android:id="@+id/avf_serviceDetail_images">
            </AdapterViewFlipper>
            <ScrollView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h40"
                        android:background="@color/pink"
                        android:weightSum="2"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/h60"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/h30"
                            android:layout_marginRight="@dimen/h30"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/h60"
                                android:src="@drawable/rate"
                                android:layout_marginRight="@dimen/h3"/>
                            <TextView
                                android:id="@+id/tv_contenofhomestay_evaluation"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/h60"
                                android:text="@string/rate"
                                android:textColor="@color/white"
                                android:textSize="@dimen/t20"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/h3"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/h30"
                            android:layout_marginRight="@dimen/h30"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/h45"
                                android:src="@drawable/comment"
                                android:layout_marginRight="@dimen/h3"/>
                            <TextView
                                android:id="@+id/tv_servicedetail_vote1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/h60"
                                android:text="@string/comment"
                                android:textColor="@color/white"
                                android:textSize="@dimen/t20"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/h3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_contenofhomestay_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="@dimen/h12"
                        android:text="@string/nameofhomestay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:padding="@dimen/h16">
                        <TextView
                            android:id="@+id/tv_contenofhomestay_desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/contenthomestay"
                            android:textColor="@color/black"
                            android:textSize="@dimen/t16"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/tv_contenofhomestay_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h16"
                        android:layout_marginRight="@dimen/h16"
                        android:text="@string/address"
                        android:enabled="false"
                        android:textColorHint="@color/black" />
                    <LinearLayout
                        android:id="@+id/layout_facility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/h20"
                        android:layout_marginRight="@dimen/h20"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/cb_contenofhomestay_wifi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wifi" />
                        <CheckBox
                            android:id="@+id/cb_contenofhomestay_freebreakfast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/freebreakfast" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_facility2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/h20"
                        android:layout_marginRight="@dimen/h20"
                        android:layout_marginBottom="@dimen/h5"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/cb_contenofhomestay_ac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ac" />
                        <CheckBox
                            android:id="@+id/cb_contenofhomestay_swimmingpool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/swimmingpool" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/h16"
                        android:weightSum="5">
                        <RatingBar
                            android:isIndicator="true"
                            android:id="@+id/rating_bar_container"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="1" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/h16"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/tv_servicedetail_vote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/comment"
                                android:textColor="@color/white"
                                android:textSize="@dimen/h35" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/votes"
                                android:textColor="@color/white"
                                android:textSize="@dimen/t18" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/h80"
                        android:paddingRight="@dimen/h80"
                        android:paddingTop="@dimen/h10"
                        android:paddingBottom="@dimen/h10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback"
                            android:padding="@dimen/h5"
                            android:gravity="center"
                            android:textSize="@dimen/t16"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="@drawable/text_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.gogocita.admin.helper.NonScrollListView
                            android:id="@+id/lv_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">
                        </com.gogocita.admin.helper.NonScrollListView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_contenofhomestay_book"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h80"
                    android:text="@string/booknow"
                    android:textSize="@dimen/h20"
                    android:background="@color/pink"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_menu_drawer"/>
</android.support.v4.widget.DrawerLayout>