<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_margin="@dimen/standard"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar_createNewService"
                android:layout_width="@dimen/h100"
                android:layout_height="@dimen/h100"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/h20"
                android:visibility="gone" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h20"
                android:layout_weight="9"
                android:scrollbars="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_createyourservice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/creatyoursv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/edt_createservice_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:textSize="@dimen/t18"
                        android:textColorHint="@color/black" />
                    <EditText
                        android:id="@+id/edt_createservice_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/type"
                        android:enabled="true"
                        android:textSize="@dimen/t18"
                        android:textColorHint="@color/black" />
                    <RadioGroup
                        android:id="@+id/radioGroup_Type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="3">
                        <RadioButton
                            android:id="@+id/radioButton_groundHouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/groundhouse" />
                        <RadioButton
                            android:id="@+id/radioButton_villa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/villa" />
                        <RadioButton
                            android:id="@+id/radioButton_bungalow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bungalow" />
                    </RadioGroup>
                    <RelativeLayout
                        android:id="@+id/layout_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h4"
                        android:layout_marginRight="@dimen/h4"
                        android:layout_marginTop="@dimen/h7">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="District"
                            android:textColor="@color/black"
                            android:textSize="@dimen/t18"/>
                        <Spinner
                            android:id="@+id/spinner_District"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"></Spinner>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h4"
                        android:layout_marginRight="@dimen/h4"
                        android:layout_marginTop="@dimen/h7"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/city"
                            android:textSize="@dimen/t18"
                            android:textColor="@color/black" />
                        <Spinner
                            android:id="@+id/spinner_City"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"></Spinner>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h4"
                        android:layout_marginRight="@dimen/h4"
                        android:layout_marginTop="@dimen/h7"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/t18"
                            android:text="@string/country"
                            android:textColor="@color/black" />
                        <Spinner
                            android:id="@+id/spinner_Nationality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"></Spinner>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/edt_createservice_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:textColorHint="@color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h150"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/h7"
                        android:padding="@dimen/h8">
                        <EditText
                            android:id="@+id/edt_createservice_desciption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:hint="@string/desc"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_facility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/h7"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/checkbox_wifi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wifi" />
                        <CheckBox
                            android:id="@+id/checkbox_freebreakfast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/freebreakfast" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_facility2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/checkbox_ac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ac" />
                        <CheckBox
                            android:id="@+id/checkbox_swimmingpool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/swimmingpool" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_uploadimage"
                        android:onClick="uploadImage"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_facility2"
                        android:text="@string/uploadimage"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/t15" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        android:padding="@dimen/h2">
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/price"
                                android:textColor="@color/black"
                                android:textSize="@dimen/t18"/>
                            <EditText
                                android:id="@+id/edt_createservice_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/price1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/t18"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:id="@+id/btn_createnewservice_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:text="@string/complete"
            android:onClick="createdService"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/t20"/>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_menu_drawer"/>
</android.support.v4.widget.DrawerLayout>