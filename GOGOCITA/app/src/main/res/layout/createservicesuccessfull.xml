<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/edit_margin_left">
        <LinearLayout
            android:id="@+id/layout_createservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imv_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/check" />
            <TextView
                android:id="@+id/tv_createservice"
                android:layout_below="@+id/imv_check"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great! Your creat your service successful"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_createservice">

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:text="RETURN DASHBOARD"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>