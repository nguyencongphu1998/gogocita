<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/h200"
    android:padding="@dimen/h10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/tv_feedback_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/User_name"
            android:background="@drawable/text_bg"
            android:textSize="@dimen/t15"
            android:layout_gravity="center"
            android:padding="@dimen/h10"
            android:layout_weight="1"/>
        <RatingBar
            android:isIndicator="true"
            android:id="@+id/rating_bar_container"
            android:layout_width="@dimen/h180"
            android:layout_height="wrap_content"
            android:rating="3"
            android:stepSize="1.0"
            android:numStars="5"
            android:layout_weight="1" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/text_bg">
        <TextView
            android:id="@+id/tv_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/feedback"
            android:padding="@dimen/h10"/>
    </ScrollView>
</LinearLayout>