<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar_forgetpassword"
            android:layout_width="@dimen/h100"
            android:layout_height="@dimen/h100"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/h20"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_forgotpass"
            android:layout_margin="@dimen/standard"
            android:text="@string/forgotpass"
            android:paddingTop="@dimen/h20"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/t23"
            android:textColor="@color/pink" />
        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard"
            android:layout_below="@+id/tv_forgotpass"
            android:text="@string/ctforgotpass"
            android:textSize="@dimen/t18"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/coloraaaaaa" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:hint="@string/email"
            android:layout_below="@+id/tv_notify"
            android:layout_margin="@dimen/h20" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_forgotpass"
            android:layout_alignTop="@+id/et_email"
            android:background="@drawable/email"
            android:layout_marginTop="@dimen/h12"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sendmail"
            android:text="@string/send"
            android:textSize="@dimen/t20"
            android:layout_marginRight="@dimen/standard"
            android:layout_marginLeft="@dimen/standard"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_below="@id/et_email"
            android:layout_marginTop="@dimen/h60"
            android:textColor="@color/white"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>