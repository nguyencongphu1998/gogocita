<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/text_bg"
        android:layout_margin="@dimen/standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/standard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nameofcustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/User_name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/standard"
                    android:layout_marginRight="@dimen/standard"
                    android:textSize="@dimen/t20" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_phonenumberofcustomer"
                    android:text="@string/phone"
                    android:layout_marginTop="@dimen/h5"
                    android:layout_marginLeft="@dimen/standard"
                    android:layout_marginRight="@dimen/standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t18" />
                <LinearLayout
                    android:layout_marginTop="@dimen/h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard"
                    android:layout_marginRight="@dimen/standard"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkin"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_checkin"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/h5"
                    android:layout_weight="5"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard"
                    android:layout_marginRight="@dimen/standard"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkout"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_checkout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/t20"
                        android:text="@string/date"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/confirm"
                android:textColor="@color/white"
                android:text="@string/confirm"
                android:visibility="gone"
                android:layout_margin="@dimen/h4" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cancel"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:visibility="gone"
                android:layout_margin="@dimen/h4" />
        </LinearLayout>
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h45"
                android:id="@+id/tv_status"
                android:text="@string/status"
                android:textColor="@color/white"
                android:background="@color/confirm"
                android:gravity="center"
                android:textSize="@dimen/t20"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>