<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <ProgressBar
            android:id="@+id/progressBar_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_login"
            />
        <EditText
            android:id="@+id/et_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:hint="@string/User_name"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_user_login"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:hint="@string/Password"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password_login"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:textColor="#ffffff"
            android:background="@drawable/border_button"
            android:text="@string/Login"
            android:textAllCaps="false"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_login_with"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:text="@string/login_with"
            android:textAlignment="center"
            android:onClick="forgotPassword"
            />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_login_with"
          android:orientation="horizontal"
            android:layout_marginTop="15dp">
          <Button
              android:id="@+id/btn_facebook"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"

              android:layout_marginLeft="@dimen/edit_margin_left"
              android:layout_marginRight="10dp"
              android:textColor="#ffffff"
              android:background="@drawable/border_button"
              android:text="@string/facebook"
              android:textAllCaps="false"
              android:textSize="20dp"
              />
          <Button
              android:id="@+id/btn_gmail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_toRightOf="@id/btn_facebook"

              android:layout_marginRight="@dimen/edit_margin_right"
              android:textColor="#ffffff"

              android:background="@drawable/border_button"
              android:text="@string/gmail"
              android:textAllCaps="false"
              android:textSize="20dp"
              />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/ln_creat"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:text="@string/Forgot_passord"
            android:textAlignment="center"
            android:onClick="forgotPassword"
            />


        <LinearLayout
            android:id="@+id/ln_creat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/tv_dont"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/edit_margin_left"
                android:text="Don't have an account?"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="522dp"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                tools:layout_editor_absoluteX="134dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="228dp"
                android:layout_marginRight="@dimen/edit_margin_right"
                android:textAllCaps="false"
                android:text="Create"
                android:textColor="@color/colorWhite"
                android:background="@drawable/border_button_create"
                android:onClick="btn_create"
                />
        </LinearLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
