<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/relative_tourist_guider"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:gravity="center"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bgtouristguid"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textview_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour Guider"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/button_tourist_guider"
                android:layout_below="@+id/textview_title1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_rounded_corners"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Get started"
                android:onClick="btnTourisGuid"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_homestay"
        android:layout_below="@+id/relative_tourist_guider"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bghomestay"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textview_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Homestay"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/button_homestay"
                android:layout_below="@+id/textview_title1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_rounded_corners"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Get started"
                android:onClick="btnHomeStay"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>