<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/relative_tourist_guider"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bgtouristguid"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/tour_guider"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_tourist_guider"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_title1"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="btnTourisGuid"
                android:text="@string/get_started"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_homestay"
        android:layout_below="@+id/relative_tourist_guider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bghomestay"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textview_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/homestay"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/button_homestay"
                android:layout_below="@+id/textview_title1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_rounded_corners"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Get started"
                android:onClick="btnHomeStay"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>