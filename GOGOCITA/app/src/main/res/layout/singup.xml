<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gogocita.admin.gogocita.users.SingUpActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/h100"
        android:layout_height="@dimen/h100"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/h20"
        android:visibility="gone" />
    <TextView
        android:id="@+id/textView_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/h15"
        android:gravity="center"
        android:text="@string/signup"
        android:textColor="#454545"
        android:textSize="@dimen/t23"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editView_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_signup"
        android:layout_marginHorizontal="25sp"
        android:inputType="textEmailAddress"
        android:hint="@string/youremail"
        android:textColor="#454545"
        android:textSize="@dimen/t18"
        />
    <EditText
        android:id="@+id/editView_youare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editView_email"
        android:layout_marginHorizontal="@dimen/h25"
        android:layout_marginTop="@dimen/h10"
        android:hint="@string/youare"
        android:textColor="#555555"
        android:textSize="@dimen/t18"
        android:enabled="false"
        />
    <RadioGroup
        android:id="@+id/radioGroup_usertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editView_youare"
        android:layout_marginTop="@dimen/h15"
        android:gravity="center">
        <RadioButton
            android:id="@+id/radioButton_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/h50"
            android:checked="true"
            android:paddingLeft="@dimen/h150"
            android:text="Customer"
            android:textSize="@dimen/t17" />
        <RadioButton
            android:id="@+id/radioButton_homestay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/h50"
            android:paddingLeft="@dimen/h150"
            android:text="Homestay"
            android:textSize="@dimen/t17" />
        <RadioButton
            android:id="@+id/radioButton_tourisguider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/h50"
            android:paddingLeft="@dimen/h150"
            android:text="Touris Guider"
            android:textSize="@dimen/t17" />
    </RadioGroup>

    <EditText
        android:id="@+id/editView_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/h25"
        android:inputType="textPassword"
        android:layout_below="@id/radioGroup_usertype"
        android:hint="@string/Password"
        android:textColor="#555555"
        android:textSize="@dimen/t18"
        />
    <EditText
        android:id="@+id/editView_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editView_password"
        android:inputType="textPassword"
        android:layout_marginHorizontal="@dimen/h25"
        android:hint="@string/repeatpass"
        android:textColor="#555555"
        android:textSize="@dimen/t18"
        android:layout_marginTop="@dimen/h10"/>
    <TextView
        android:id="@+id/textView_conditions"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginHorizontal="25sp"
        android:layout_below="@id/editView_repassword"
        android:layout_marginTop="15dp"
        android:background="#aaaaaa"
        android:padding="25sp"
        android:text="@string/terms_and_conditions"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkbox_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_conditions"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        android:text="Accept Terms and conditions"
        android:textColor="#9098a2"
        />

    <Button
        android:id="@+id/button_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ff586c"
        android:padding="18sp"
        android:text="@string/sign_up"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>