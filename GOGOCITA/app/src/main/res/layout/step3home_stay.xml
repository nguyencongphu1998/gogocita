<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/step3_homestay" />

        <TextView
            android:id="@+id/tv_center1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_step1"
            android:text="@string/Create_your_properties"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_center2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_center1"
            android:layout_marginTop="15dp"
            android:text="@string/If_your_home_stay"
            android:textAlignment="center" />
        <ImageView
            android:id="@+id/iv_step2"
            android:layout_below="@id/tv_center2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/next_page_homestay3" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/Next"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"


            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>