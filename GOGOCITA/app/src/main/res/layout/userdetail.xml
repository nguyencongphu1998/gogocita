<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.gogocita.admin.gogocita.users.UserDetailActivity">
        <ProgressBar
            android:id="@+id/progressBar_userDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <TextView
            android:id="@+id/titleinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_information"
            android:textColor="@color/black"
            android:textSize="@dimen/t23"
            android:layout_marginTop="@dimen/h60"
            android:gravity="center"
            android:textStyle="bold"/>
        <ScrollView
            android:layout_below="@+id/titleinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/h5"
                android:layout_marginLeft="@dimen/standard"
                android:layout_marginRight="@dimen/standard"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="First name"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_firstname"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Last name"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_lastname"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="BirthDay"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_birthday"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Phone"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_phone"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Gender"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_gender"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Job"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_job"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Identity Card"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_idnumber"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Address"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_address"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="Country"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_country"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="City"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_city"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="@dimen/h10"
                    android:layout_marginBottom="@dimen/h30">
                    <TextView
                        android:layout_width="@dimen/h120"
                        android:layout_height="@dimen/h40"
                        android:layout_weight="1"
                        android:textSize="@dimen/t20"
                        android:text="District"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textview_district"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/h30"
                        android:paddingLeft="@dimen/h10"
                        android:layout_height="@dimen/h40"
                        android:textColor="@color/black"
                        android:background="@drawable/text_bg"
                        android:textSize="@dimen/t20"
                        android:layout_weight="1" />
                </TableRow>
                <Button
                    android:id="@+id/button_updateuser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t20"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:text="Update"
                    />
            </TableLayout>
        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_menu_drawer"/>
</android.support.v4.widget.DrawerLayout>

